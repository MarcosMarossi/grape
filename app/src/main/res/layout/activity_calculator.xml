<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculatorActivity">


    <Button
        android:id="@+id/b1"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:layout_marginStart="32dp"
        android:background="@android:color/transparent"
        android:text="1"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bClear" />

    <Button
        android:id="@+id/b4"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:layout_marginStart="32dp"
        android:background="@android:color/transparent"
        android:text="4"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b1" />

    <Button
        android:id="@+id/b2"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:background="@android:color/transparent"
        android:text="2"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/b1"
        app:layout_constraintTop_toBottomOf="@+id/bClear" />

    <Button
        android:id="@+id/b3"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:background="@android:color/transparent"
        android:text="3"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/b2"
        app:layout_constraintTop_toBottomOf="@+id/bClear" />

    <Button
        android:id="@+id/bRes"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:background="@android:color/transparent"
        android:text="="
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/b3"
        app:layout_constraintTop_toBottomOf="@+id/bClear" />

    <Button
        android:id="@+id/bDiv"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:background="@android:color/transparent"
        android:text="/"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/b9"
        app:layout_constraintTop_toBottomOf="@+id/b4" />

    <Button
        android:id="@+id/bAdd"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:background="@android:color/transparent"
        android:text="+"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/bSub"
        app:layout_constraintTop_toTopOf="@+id/bDec" />

    <Button
        android:id="@+id/b0"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:background="@android:color/transparent"
        android:text="0"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/bDec"
        app:layout_constraintTop_toBottomOf="@+id/b7" />

    <Button
        android:id="@+id/bDec"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:layout_marginStart="32dp"
        android:background="@android:color/transparent"
        android:text="."
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b7" />

    <Button
        android:id="@+id/b5"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:background="@android:color/transparent"
        android:text="5"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/b4"
        app:layout_constraintTop_toBottomOf="@+id/b1" />

    <Button
        android:id="@+id/b6"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:background="@android:color/transparent"
        android:text="6"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/b5"
        app:layout_constraintTop_toBottomOf="@+id/b1" />

    <Button
        android:id="@+id/bMul"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:background="@android:color/transparent"
        android:text="*"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/b6"
        app:layout_constraintTop_toBottomOf="@+id/b1" />

    <Button
        android:id="@+id/b7"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:layout_marginStart="32dp"
        android:background="@android:color/transparent"
        android:text="7"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b4" />

    <Button
        android:id="@+id/b9"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:background="@android:color/transparent"
        android:text="9"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/b8"
        app:layout_constraintTop_toBottomOf="@+id/b4" />

    <Button
        android:id="@+id/bSub"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:background="@android:color/transparent"
        android:text="-"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/b0"
        app:layout_constraintTop_toBottomOf="@+id/b7" />

    <Button
        android:id="@+id/b8"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:background="@android:color/transparent"
        android:text="8"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/b7"
        app:layout_constraintTop_toBottomOf="@+id/b4" />

    <Button
        android:id="@+id/bClear"
        android:layout_width="174dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:background="@android:color/transparent"
        android:text="CE"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texto" />

    <Button
        android:id="@+id/bBack"
        android:layout_width="174dp"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        android:text="BACK"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/bClear"
        app:layout_constraintTop_toBottomOf="@+id/texto" />

    <TextView
        android:id="@+id/texto"
        android:layout_width="348dp"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="100dp"
        android:background="@android:color/transparent"
        android:gravity="center|end"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>